{% extends '@SonataAdmin/CRUD/show.html.twig' %}

{% block content %} 
    <style>
        #table1 {
            border-width: 2px;
        }

        #table1 th {
            border-width: 2px;
        }

        #table1 td {
            border-width: 2px;
        }
    </style>

    <div class="box box-primary">
        <div class="box-header">
            {#{ dump(object) }#}
            <h3 class="box-title">Inventario Bienes Perteneciente A : {{ object.unidad }}</h3><br/>
            <h3 class="box-title">Descripci√≥n: {{ object.nombre }}- Fecha: {{ object.fecha | date('d-m-Y') }}</h3>            
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped table-hover sonata-ba-list" id="table1" >
                <thead>
                    <tr>
                        <th class="col-md-4 text-center">Objeto</th>
                        <th class="col-md-1 text-center">Existencia Anterior</th>
                        <th class="col-md-1 text-center">Alta</th>
                        <th class="col-md-1 text-center">Baja</th>
                        <th class="col-md-1 text-center">Total</th>
                        <th class="col-md-1 text-center">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    {#{ dump(t) }#}
                    {% for obj in objects %}
                        {% if not (obj.ea == 0 and obj.alta == 0 and obj.baja == 0) %}
                        <tr>                                            
                            <td class="text-left text-bold">{{obj.rubro}}-{{obj.sub_rubro}}-{{obj.codigo}}-{{ obj.nombre }}</td>
                            <td class="text-right text-bold">{{ obj.ea }}</td>
                            <td class="text-right text-bold">{{ obj.alta }}</td>
                            <td class="text-right text-bold">{{ obj.baja }}</td>
                            <td class="text-right text-bold">{{ obj.ea + obj.alta - obj.baja }}</td>
                            <td class="text-right text-bold">{{ this.getEstado(obj.max_id) }}</td>
                        </tr>
                        {% endif %}                        
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}